---
import { useTranslations } from "@i18n/util";
import { OverviewImage } from "@serverless-cd/goat-ui";

const t = useTranslations(Astro);
---

<div
    class="w-full bg-base-100 lg:w-[85.125rem] flex flex-col items-center my-10 md:mb-20 md:mt-[3.625rem]"
>
    <span class="text-info text-xs mb-6">微服务全景图</span>
    <div
        class="title text-neutral text-[1.125rem] md:text-[2.75rem] leading-7 md:leading-[3.5rem] font-medium text-center whitespace-normal max-w-full md:max-w-[60%]"
    >
        微服务全景图
    </div>
</div>
<div
    class="w-full lg:w-[85.125rem] relative flex overflow-hidden pb-[3.25rem] py-10 px-6 md:px-10 lg:px-0 bg-base-100 mx-auto"
>
    <OverviewImage colors={{ panelColor: "#F6F8F8", arrowColor: "#61B867" }} />
</div>
